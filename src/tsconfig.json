{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../../dist/",
    "rootDir": "..",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "stripInternal": true,
    "baseUrl": ""
  },
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "debug": true
  },
  "files": [
    "main.ts",
    "typings.d.ts"
  ],
  "atom": { "rewriteTsconfig": false },
  "compileOnSave": false,
  "buildOnSave": false
}
